<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/main_lifecycle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LifeCylcle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/main_cst_lifecycle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义LifeCylcle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/main_livedata_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LiveData"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/main_room_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/main_navigation_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navigation"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/main_paging_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paging"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/main_workmanager_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WorkManager"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>